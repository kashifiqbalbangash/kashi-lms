# ==============================================================================
# KASHI LMS - Learning Management System
# ==============================================================================
# 
# PROJECT INFORMATION
# -------------------
# Project Name: Kashi LMS (StellixSoft LMS)
# Framework: Laravel 11.x with Livewire 3.x
# Description: A comprehensive Learning Management System with course management,
#              video hosting, payment processing, quizzes, assignments, and more.
#
# KEY FEATURES:
# - Course Management (Online/On-site)
# - Video Hosting (Vimeo Integration)
# - Payment Processing (Stripe)
# - Quizzes & Assignments
# - Microsoft OAuth Authentication
# - Calendar & Event Management
# - Certificate Generation
# - Course Analytics
# - Multi-role System (Admin, Tutor, Learner)
# - Wishlist & Reviews
# - Email Notifications
#
# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application Name - Displayed throughout the application
APP_NAME="Kashi LMS"

# Application Environment
# Options: local, staging, production
# - local: Development environment with debug enabled
# - staging: Pre-production testing environment
# - production: Live production environment
APP_ENV=local

# Application Key - DO NOT SHARE THIS KEY
# Generated automatically with: php artisan key:generate
# This key is used for encryption and should be unique for each installation
APP_KEY=base64:HybJLDh9N1e8dlKaiSfTOiMXS8lmP5nvH1rbH2w6iis=

# Application Debug Mode
# Set to true for development (shows detailed error messages)
# Set to false for production (shows generic error pages)
APP_DEBUG=true

# Application Timezone
# Set your server's timezone (e.g., UTC, America/New_York, Asia/Karachi)
APP_TIMEZONE=UTC

# Application URL
# Your application's base URL (without trailing slash)
# For localhost: http://localhost or http://localhost:8000
# For production: https://yourdomain.com
APP_URL=http://localhost

# ==============================================================================
# LOCALIZATION SETTINGS
# ==============================================================================

# Default Application Locale
APP_LOCALE=en

# Fallback Locale (used when translation is missing)
APP_FALLBACK_LOCALE=en

# Faker Locale (for generating fake data in seeders)
APP_FAKER_LOCALE=en_US

# ==============================================================================
# MAINTENANCE MODE
# ==============================================================================

# Maintenance Driver
# Options: file, database
# - file: Uses storage/framework/down file
# - database: Uses database table (requires migration)
APP_MAINTENANCE_DRIVER=file

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# PHP CLI Server Workers (for development server)
PHP_CLI_SERVER_WORKERS=4

# Bcrypt Rounds (password hashing strength)
# Higher = more secure but slower (default: 12)
BCRYPT_ROUNDS=12

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log Channel
# Options: stack, single, daily, slack, syslog, errorlog, null
LOG_CHANNEL=stack

# Log Stack (when using 'stack' channel)
LOG_STACK=single

# Log Deprecations Channel
LOG_DEPRECATIONS_CHANNEL=null

# Log Level
# Options: debug, info, notice, warning, error, critical, alert, emergency
LOG_LEVEL=debug

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# 
# IMPORTANT: Create the database before running migrations
# 
# For WAMP/XAMPP:
# 1. Open phpMyAdmin (http://localhost/phpmyadmin)
# 2. Create a new database (e.g., 'kashi_lms' or 'lms')
# 3. Update DB_DATABASE below with your database name
# 4. Run: php artisan migrate
#
# For production:
# - Use strong database credentials
# - Consider using environment-specific databases
# ==============================================================================

# Database Connection Type
# Options: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql

# Database Host
# For localhost: 127.0.0.1 or localhost
# For remote: your-database-host.com
DB_HOST=127.0.0.1

# Database Port
# MySQL default: 3306
# PostgreSQL default: 5432
DB_PORT=3306

# Database Name
# Create this database in phpMyAdmin before running migrations
DB_DATABASE=lms

# Database Username
# WAMP/XAMPP default: root
# Production: Use a dedicated database user
DB_USERNAME=root

# Database Password
# WAMP/XAMPP default: (empty)
# Production: Use a strong password
DB_PASSWORD=

# ==============================================================================
# SESSION CONFIGURATION
# ==============================================================================

# Session Driver
# Options: file, cookie, database, memcached, redis, array
# Recommended: database (for multi-server setups)
SESSION_DRIVER=database

# Session Lifetime (in minutes)
# Default: 120 (2 hours)
SESSION_LIFETIME=120

# Session Encryption
SESSION_ENCRYPT=false

# Session Path
SESSION_PATH=/

# Session Domain
# Leave null for default, or set to your domain (e.g., .yourdomain.com)
SESSION_DOMAIN=null

# ==============================================================================
# BROADCASTING & QUEUE CONFIGURATION
# ==============================================================================

# Broadcast Connection
# Options: pusher, redis, log, null
# For real-time features (currently using log for development)
BROADCAST_CONNECTION=log

# Filesystem Disk
# Options: local, public, s3
# - local: Stores files in storage/app
# - public: Stores files in storage/app/public (accessible via public link)
# - s3: Amazon S3 storage
FILESYSTEM_DISK=local

# Queue Connection
# Options: sync, database, redis, sqs, beanstalkd
# - sync: Executes jobs immediately (development)
# - database: Uses database queue table (requires: php artisan queue:table)
# - redis: Uses Redis (requires Redis server)
QUEUE_CONNECTION=database

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Cache Store
# Options: apc, array, database, file, memcached, redis, dynamodb, octane, null
# Recommended: database (for development), redis (for production)
CACHE_STORE=database

# Cache Prefix (for shared cache environments)
CACHE_PREFIX=

# ==============================================================================
# MEMCACHED CONFIGURATION (Optional)
# ==============================================================================

MEMCACHED_HOST=127.0.0.1

# ==============================================================================
# REDIS CONFIGURATION (Optional)
# ==============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==============================================================================
# MAIL CONFIGURATION
# ==============================================================================
#
# The application sends various emails:
# - Email Verification
# - Password Reset
# - Course Announcements
# - Certificate Delivery
# - Tutor Approval/Rejection
# - Help Request Responses
#
# For local development, use 'log' driver (emails saved to storage/logs)
# For production, configure SMTP or use services like Mailgun, SendGrid, etc.
# ==============================================================================

# Mail Driver
# Options: smtp, sendmail, mailgun, ses, postmark, resend, log, array, failover
# For development: log (saves emails to storage/logs/laravel.log)
# For production: smtp, mailgun, ses, or postmark
MAIL_MAILER=log

# SMTP Configuration (when using 'smtp' driver)
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Mail From Address (sender email)
MAIL_FROM_ADDRESS="noreply@kashilms.com"

# Mail From Name (sender name)
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================================================
# AWS CONFIGURATION (Optional - for S3 storage)
# ==============================================================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
